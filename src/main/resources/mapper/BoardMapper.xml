<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.noteking.web.board.repository.BoardRepository">

    <resultMap type="Board" id="BoardMemberMap">
        <id column="board_id" property="board_id"/>
        <result column="user_id" property="user_id"/>
        <result column="title" property="title"/>
        <result column="note" property="note"/>
        <result column="img" property="img"/>
        <result column="edit_date" property="edit_date"/>
        <result column="date" property="date"/>

        <collection property="member" ofType="Member">
            <id column="user_id" property="user_id"/>
            <result column="name" property="name"/>
            <result column="nick_name" property="nick_name"/>
            <result column="email" property="email"/>
            <result column="password" property="password"/>
            <result column="join_date" property="join_date"/>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="BoardMemberMap">
        SELECT
        b.board_id
        , b.user_id
        , b.title
        , b.date
        , u.name
        , u.nick_name
        FROM tb_board b
        LEFT JOIN tb_user u on b.user_id = u.user_id
        ORDER BY b.date DESC
    </select>

</mapper>
